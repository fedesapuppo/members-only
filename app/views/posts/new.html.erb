<h1>New Post</h1>
<%= form_with model: @post, url: posts_path do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <% if user_signed_in? %>
    <div>
      <%= form.label :author %>
      <%= form.text_field :author %>
    </div>
  <% end %>
  <div>
    <%= form.submit "Create Post" %>
  </div>
<% end %>
